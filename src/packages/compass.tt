        {% if states('sensor.bresser51_wind_beaufort')|int > 0 %}
        /local/compass/arrow-{{
        states('sensor.bresser51_wind_direction_sector')
        }}.svg
        {% else %}
        /local/compass/arrow-none.svg
        {% endif %}
      state: >-
        {% if states('sensor.bresser51_wind_beaufort')|int > 0 %}
        {{ states('sensor.bresser51_wind_direction_name') }}
