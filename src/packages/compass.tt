        {% endif %}
      attributes:
        direction: >-
          {% if states('sensor.bresser51_wind_beaufort')|int > 0 %}
          {{ states('sensor.bresser51_wind_direction_name') }}
          {% endif %}
        speed_text: >-
          {% if states('sensor.bresser51_wind_beaufort')|int > 0 %}
          {{ states('sensor.bresser51_wind_beaufort') }} Bft,
          {{ states('sensor.bresser51_wind_speed') }} m/s
          {% endif %}
