        - entity: sensor.aeg_oven_ov1_timetoend
          name: Stopt over

  - type: conditional
    conditions:
      - entity: sensor.aeg_oven_ov1_starttime
        state_not: "-1"
      - entity: sensor.aeg_oven_ov1_starttime
        state_not: "0"
      - entity: sensor.aeg_oven_ov1_runningtime
        state_not: "unavailable"
      - entity: sensor.aeg_oven_ov1_runningtime
        state_not: "unknown"
    row:
      type: custom:multiple-entity-row
      entity: sensor.aeg_oven_ov1_runningtime
