# Dashboard: Overzicht -- Media Player: osmc       -*- hass -*-
# WARNING: This is a generated file -- DO NOT EDIT

# To use card_mod, we must put it in a vertical-stack-in-card.
type: custom:vertical-stack-in-card
[% PROCESS v_anchors.tt -%]

# Mods: draw a border.
card_mod:
  style: |
    ha-card {
      border: 2px solid lightgreen;
      padding: 5px;
    }

# The cards.
cards:

  # First, a heading card with temp/hum badges.
  - type: heading
    heading: Woonkamer
    heading_style: title
    icon: mdi:sofa
    xxcard_mod:
      style: "ha-card .title { font-size: 30pt; }"

    badges:

      - type: entity
        entity: sensor.thermostat_hc1_currtemp
        icon: mdi:thermometer
    tap_action:
      action: navigate
      navigation_path: /lovelace-overzicht/1

  - type: grid
    columns: 2
    square: false
    cards:

      - type: tile
        entity: climate.thermostat_hc1
        name: Thermostaat
        card_mod:
          style:
            ha-tile-info$: |
              .secondary {
                visibility: hidden;
              }
              .secondary:before {
                visibility: visible;
                content: '{{ states("sensor.thermostat_setting") }} Â°C ({{ states('select.thermostat_hc1_mode')|capitalize }})';
              }

      - type: tile
        entity: binary_sensor.illuminated
        name: Licht
        card_mod:
          style:
            ha-tile-info$: |
              .secondary {
                visibility: hidden;
              }
              .secondary:before {
                visibility: visible;
                content: '{{ states("sensor.achterkamer_illuminance") }} lx';
              }

      - type: tile
        entity: switch.woonkamer_sound_system
        name: Music Center
        icon: mdi:music-circle-outline

      - type: tile
        entity: light.woonkamer_tafel
        name: Tafel
        icon: mdi:ceiling-light

[% BLOCK batt -%]
type: tile
        entity: sensor.[% sensor %]
        name: [% name %]
        vertical: true
        visibility:
          - entity: sensor.[% sensor %]
            <<: *v_available
[% END -%]

  - type: grid
    columns: 4
    square: false
    cards:

      - [% PROCESS batt name = "Smotty" sensor = "sm_a320fl_battery_level" %]
      - [% PROCESS batt name = "GlaxS4" sensor = "sm_t830_battery_level" %]
      - [% PROCESS batt name = "GlaxS7" sensor = "glaxs7_battery_level" %]
      - [% PROCESS batt name = "Joni"   sensor = "joni_battery_level" %]
      - [% PROCESS batt name = "TZ200"  sensor = "battery_tz200" %]
