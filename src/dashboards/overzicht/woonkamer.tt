      #         .secondary {
      #           visibility: hidden;
      #         }
      #         .secondary:before {
      #           visibility: visible;
      #           content: '{{ states("sensor.achterkamer_illuminance") }} lx';
      #         }

      - type: tile
        entity: switch.woonkamer_sound_system
        name: Music Center
        icon: mdi:music-circle-outline

